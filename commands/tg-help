#!/bin/bash

echo "Time Guardian CLI Commands"
echo "-------------------------"
echo ""
echo "tg-time        : Shows how much time you have used and how much time is remaining."
echo "tg-live.time   : Shows a live updating timer of your usage in the terminal."
echo "disable-tg     : Disables Time Guardian and stops the headless background process."
echo "enable-tg      : Enables Time Guardian and starts the headless background process."
echo "reset-tg       : Resets your usage counters back to 0."
echo "tg-limit       : Sets your daily time limit. Can be run interactively or with arguments."
echo "tg-help        : Shows this help message with all commands and their purposes."
echo ""
echo "Usage:"
echo "  tg-time"
echo "  tg-live.time"
echo "  disable-tg"
echo "  enable-tg"
echo "  reset-tg"
echo "  tg-limit"
echo "  tg-help"
